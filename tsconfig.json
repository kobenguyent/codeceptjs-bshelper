{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018", "DOM"],
    "esModuleInterop": true,
    "module": "commonjs",
    "strictNullChecks": false,
    "types": ["node", "mocha"],
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "moduleDetection": "force"
  },
  "exclude": ["node_modules", "test", "dist"]
}
